<div class="container login-container">
	<div class="row">
		<div class="span4 offset4 well">
			<%= devise_error_messages! %>
			<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
			  <div class="span4 fields"><%= f.email_field :email, :autofocus => true, :placeholder => "Email"%></div>
			  <br>
			  <div class="span4 fields"><%= f.password_field :password, :placeholder => "Password" %></div>
			  <div class="span4 fields reg"><%= f.password_field :password_confirmation, :placeholder => "Repeat Password" %></div>
			  <div class="span4 fields login-options reg"><%= f.submit "Sign up" , :class => 'btn btn-info btn-block btn-sub'%>
				  <%- if devise_mapping.omniauthable? %>
		  			<%- resource_class.omniauth_providers.each do |provider| %>
		    			<%= link_to image_tag( 'facebook_sign_up_27.png'), omniauth_authorize_path(resource_name, provider) %>
		  			<% end -%>
					<% end -%>
				</div>
			<% end %>

			<%#= render "devise/shared/links" %>
		</div>
	</div>
</div>