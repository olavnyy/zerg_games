<div class="container login-container">
	<div class="row">
		<div class="span4 offset4 well">
			<%= devise_error_messages! %>
			<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
			  <div class="span4 fields"><%= f.email_field :email, :autofocus => true, :placeholder => "Email"%></div>
			  <br>
			  <div class="span4 fields"><%= f.password_field :password, :placeholder => "Password" %></div>
			  <% if devise_mapping.rememberable? -%>
			    <div class="span4 fields remember"><%= f.check_box :remember_me %> <%= f.label :remember_me %><span> | </span>
				    <%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
	  					<%= link_to "Forgot password?", new_password_path(resource_name) %><br />
						<% end -%>
			    </div>
			  <% end -%>
			  <div class="span4 fields login-options"><%= f.submit "Sign in" , :class => 'btn btn-info btn-block btn-sub'%>
				  <%- if devise_mapping.omniauthable? %>
		  			<%- resource_class.omniauth_providers.each do |provider| %>
		    			<%= link_to image_tag( 'facebook_login_27.png'), omniauth_authorize_path(resource_name, provider) %>
		  			<% end -%>
					<% end -%>
				</div>
			<% end %>

			<%#= render "devise/shared/links" %>
		</div>
	</div>
</div>
