= form_for @game do |f|
  - if @game.errors.any?
    #error_explanation
      %h2= "#{pluralize(@game.errors.count, "error")} prohibited this game from being saved:"
      %ul
        - @game.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :publisher
    = f.text_field :publisher
  .field
    = f.label :website
    = f.text_field :website
  .field
    = f.label :genre
    = f.text_field :genre
  .field
    = f.label :year
    = f.date_select :year
  .field
    = f.label :description
    = f.text_area :description
  .actions
    = f.submit 'Save'
